{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":rebaseStalePrs",
    ":semanticCommits",
    ":semanticCommitTypeAll(ci)"
  ],
  "enabledManagers": [
    "pre-commit",
    "github-actions",
    "pep621"
  ],
  "platformCommit": "enabled",
  "separateMajorMinor": false,
  "packageRules": [
    {
      "matchManagers": [
        "pre-commit"
      ],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "automerge": true,
      "automergeType": "pr",
      "groupName": "pre-commit"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "automerge": true,
      "automergeType": "pr",
      "groupName": "github-actions"
    },
    {
      "matchManagers": ["pep621"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "groupName": "python",
      "automerge": false
    }
  ],
  "addLabels": [
    "renovate"
  ]
}
